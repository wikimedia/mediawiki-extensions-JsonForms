{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"type": "object",
	"title": "Bookstore",
	"properties": {
		"Book": {
			"type": "array",
			"additionalItems": false,
			"items": {
				"type": "object",
				"properties": {
					"Title": {
						"type": "string"
					},
					"Price": {
						"type": "number"
					},
					"ISBN": {
						"type": "string"
					},
					"Genre": {
						"type": "string"
					},
					"Author": {
						"type": "array",
						"items": {
							"type": "object",
							"properties": {
								"FirstName": {
									"type": "string"
								},
								"Surname": {
									"type": "string"
								}
							}
						}
					}
				}
			}
		}
	}
}

